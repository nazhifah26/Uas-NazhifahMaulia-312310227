<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgungu"
        android:layout_width="473dp"
        android:layout_height="1200dp"
        android:src="@drawable/bgungu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-117dp" />

    <ImageView
        android:id="@+id/imageViewsilang"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:src="@drawable/silang"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp"
        />

    <ImageView
        android:id="@+id/imageViewcari"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:src="@drawable/iconcari"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageViewkeranjang"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:src="@drawable/keranjang"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/ChekoutTextView"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:text="CHECKOUT"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageView
        android:id="@+id/bgputih3"
        android:layout_width="380dp"
        android:layout_height="279dp"
        android:src="@drawable/bgputih3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <ImageView
        android:id="@+id/bgputih4"
        android:layout_width="379dp"
        android:layout_height="279dp"
        android:src="@drawable/bgputih3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/nTextView"
        android:layout_width="107dp"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:text="NCT DREAM"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:text="The 4th Album 'DREAMSCAPE' (DREAMini Ver.)"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <TextView
        android:id="@+id/hargaTextView"
        android:layout_width="148dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:text="Rp 401.000,00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <ImageView
        android:id="@+id/album2"
        android:layout_width="144dp"
        android:layout_height="151dp"
        android:src="@drawable/album2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/subtotalTextView"
        android:layout_width="343dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:text="Subtotal ----------------- Rp 401.000,00"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <Button
        android:id="@+id/buttonco"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:text="Checkout  |  Rp 401.000,00"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.713"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuantity"
        app:layout_constraintEnd_toStartOf="@+id/textViewQuantity" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuantity"
        app:layout_constraintStart_toEndOf="@+id/textViewQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>
